<Page x:Class="Interface.DTCs"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Interface"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DTCs">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/files/background.png" />
        </Grid.Background>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="8*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <TextBlock Name="text" TextWrapping="Wrap" Grid.Row="1" Height="250" Width="500" Background="White" FontSize="25"/>
        <Button Grid.Row="2" HorizontalAlignment="Right" Width="200" Height="50" FontSize="23" Click="ClearDTCs" Margin="0,0,40,0">Kasuj błędy</Button>
    </Grid>
</Page>
